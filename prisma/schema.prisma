generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model JadwalMakan {
  jadwalId    Int      @id @default(autoincrement())
  jadwalMakan String
  waktu       DateTime
  user        User     @relation(fields: [userId], references: [userUID])
  userId      String
}

model JadwalVitamin {
  jadwalId Int      @id @default(autoincrement())
  vitamin  String
  waktu    DateTime
  user     User     @relation(fields: [userId], references: [userUID])
  userId   String
}

model JadwalMain {
  jadwalId          Int      @id @default(autoincrement())
  aktivitasMainBulu String
  waktu             DateTime
  user              User     @relation(fields: [userId], references: [userUID])
  userId            String
}

model JadwalCemilan {
  jadwalId      Int      @id @default(autoincrement())
  jadwalCemilan String
  waktu         DateTime
  user          User     @relation(fields: [userId], references: [userUID])
  userId        String
}

model JadwalTemu {
  jadwalId   Int      @id @default(autoincrement())
  jadwalTemu String
  waktu      DateTime
  user       User     @relation(fields: [userId], references: [userUID])
  userId     String
}

enum JenisKelamin {
  JANTAN
  BETINA
}

model Peliharaan {
  peliharaanId Int          @id @default(autoincrement())
  nama         String
  umur         Int
  jenisKelamin JenisKelamin
  slogan       String
  user         User         @relation(fields: [userId], references: [userUID])
  userId       String
}

model User {
  userUID       String          @id
  jadwalMakanan JadwalMakan[]
  jadwalVitamin JadwalVitamin[]
  jadwalMain    JadwalMain[]
  peliharaan    Peliharaan[]
  JadwalCemilan JadwalCemilan[]
  JadwalTemu    JadwalTemu[]
}
